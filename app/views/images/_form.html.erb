<%= simple_form_for @image, :html => {:multipart => true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :filename %>
    <%= f.input :command %>
    <%= f.input :location, :label => 'Your image please' %>
  </div>

<br>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

